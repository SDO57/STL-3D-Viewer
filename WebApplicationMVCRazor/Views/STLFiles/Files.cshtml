@model IEnumerable<Model.STLFileModelView>
@*@model List<Core.Entities.STLFile>*@

@{
    ViewData["Title"] = "STL Store";
}

<div class="col-3">
    <h2><a class="btn btn-primary" href="/STLFiles">Go back to Stores Index</a></h2>

</div>


@{
    var i = 0;
    foreach (var item in Model)
    {
        if (i % 4 == 0)
        {
            @: <div class="row">
        }

        <div class="col-3">
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"> @item.FileName</h5>
                           
                    <p class="card-text">
                        
                       <p>@item.FileSize byte(s)</p>
                       <p> @item.Codage</p>
                       <p> @item.StoreName</p>
                    </p>

                    <a href="/STLFiles/View?Id=@item.FileId" class="btn btn-primary">Open</a>
                </div>

            </div>


        </div>
        i++;

        if (i % 4 == 0)
        {
            @: </div>
        }


    }
}




